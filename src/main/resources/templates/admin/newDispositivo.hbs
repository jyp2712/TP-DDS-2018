{{#partial "contenido"}}
	
	<form action="/admin/{{administrador.id}}/dispositivos" method="POST">
		
		<div class="form-group">
			<label for="nombreGenerico">Nombre</label>
			<input type="text" placeholder="Nombre del dispositivo" name="nombreGenerico">
		</div>
	
		<div class="form-group">		
			<label for="coeficiente">Coeficiente</label>
			<input type="number" step="any" placeholder="Coeficiente de optimizacion" name="coeficiente">
		</div>
		
		<div class="form-group">		
			<label for="usoMinimo">Consumo Minimo</label>
			<input type="number" placeholder="Consumo Minimo" name="usoMinimo">
		</div>
		
		<div class="form-group">		
			<label for="usoMaximo">Consumo Maximo</label>
			<input type="number" placeholder="Consumo Maximo" name="usoMaximo">
		</div>
		
		<div class="form-group">		
			<label for="optimizable">Optimizable</label>
			<input type="checkbox" name="optimizable" value="TRUE">
		</div>
		
		<input class="btn btn-primary btn-lg" type="submit" value="Guardar">
	</form>

<table class="table table-stripped">
<br></br>
<h2>Dispositivos Concretos</h2>
		<tr>
			<th>Nombre</th>
			<th>Coeficiente</th>
			<th>Minimo</th>
			<th>Maximo</th>
			<th>Optimizable</th>
		</tr>

		{{#each dispositivos}}
			<tr>
				<td>{{nombreGenerico}}</td>
				<td>{{coeficiente}}</td>
				<td>{{usoMinimo}} Kw</td>
				<td>{{usoMaximo}} Kw</td>
				<td>{{#if optimizable}}Si{{else}}No{{/if}}</td>
			</tr>
		{{/each}}

</table>	
	
{{/partial}}

{{>layoutAdmin.hbs}}